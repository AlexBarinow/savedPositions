<androidx.cardview.widget.CardView android:layout_width="350dp"
    android:layout_height="145dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    app:cardCornerRadius="6dp"
    android:elevation="16dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="8dp"

    android:contextClickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
       <LinearLayout
           android:padding="6dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/name"
               android:gravity="center"
               android:textSize="18dp"
               android:textAllCaps="false"
               android:text="Hello Friend"
               />
           <TextView
               android:id="@+id/text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                    android:text="Hello, friend? That's lame. Maybe I should give you a name. But thats a slippery slope. Youre only in my head. We have to remember that. Shit. Its actually happened. Im talking to an imaginary person. What Im about to tell you is top secret. A conspiracy bigger than all of us."/>
       </LinearLayout>

   </androidx.cardview.widget.CardView>



